<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pokemon.MainMenu">
   <children>
      <Button fx:id="pokedexWindow" layoutX="459.0" layoutY="69.0" mnemonicParsing="false" onAction="#openPokedexWindow" prefHeight="26.0" prefWidth="86.0" text="Pokedex" />
      <Button fx:id="trainerWindow" layoutX="459.0" layoutY="130.0" mnemonicParsing="false" onAction="#openTrainerWindows" prefHeight="26.0" prefWidth="86.0" text="Entrenadores" />
      <ComboBox fx:id="difficultySelection" layoutX="427.0" layoutY="187.0" onAction="#selectDifficulty" prefWidth="150.0" promptText="Selecciona la dificultad" />
      <Button fx:id="programExit" layoutX="41.0" layoutY="345.0" mnemonicParsing="false" onAction="#exitProgram" text="Salir" />
      <Button fx:id="helpWindow" layoutX="285.0" layoutY="345.0" mnemonicParsing="false" onAction="#openHelpWindow" text="Ayuda" />
      <Button fx:id="databaseReturn" layoutX="367.0" layoutY="345.0" mnemonicParsing="false" onAction="#returnToDatabase" text="Volver BBDD" />
      <Button fx:id="playButton" layoutX="519.0" layoutY="345.0" mnemonicParsing="false" onAction="#openGame" text="Jugar" />
      <ImageView fx:id="trainerImage" fitHeight="261.0" fitWidth="346.0" layoutX="61.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../imagenes/dibujo_entrenadores.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
